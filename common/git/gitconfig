[user]
	name = Jens Peter Secher
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.config/git/ignore
	editor = hx
[fetch]
	prune = true
	pruneTags = true
	all = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[alias]
	get = pull --ff-only
	sum = log --stat --graph --decorate --decorate --branches --remotes=origin/HEAD
	sumall = log --stat --graph --decorate --all
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[color "diff"]
    # commit = yellow
    context = default dim
    meta = blue reverse italic
    frag = blue reverse italic
    func = cyan
[column]
	ui = auto
